<h1>Pirates</h1>

<div class="pirate">
    <h2>Name: <%= @pirate.name %></h2><br>
    <h3>Weight: <%= @pirate.weight %> pounds</h2><br>
    <h3>Height: <%= @pirate.height %> inches</h2><br>
 </div><br>


<h1>Ships</h1>
    <% @ships.each do |ship| %>
    <div class="ship">
    <h2>Name: <%= ship.name %></h2><br>
    <h3>Type: <%= ship.type %> </h2><br>
    <h3>Booty: <%= ship.booty %> </h2><br>
    </div>
